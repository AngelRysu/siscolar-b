{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",

    "types": [],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}